<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="#6D4C41" />

            <stroke
                android:width="2dp"
                android:color="#3E2723" />

            <corners android:radius="4dp" />

            <padding
                android:left="6dp"
                android:top="4dp"
                android:right="6dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <solid android:color="#D32F2F" />

            <stroke
                android:width="2dp"
                android:color="#7E1C1C" />

            <corners android:radius="4dp" />

            <padding
                android:left="6dp"
                android:top="4dp"
                android:right="6dp"
                android:bottom="4dp" />
        </shape>
    </item>

</selector>
