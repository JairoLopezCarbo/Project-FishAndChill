<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondologin">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="303dp"
        android:layout_height="298dp"
        android:background="@drawable/bg_login_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/pixel_font"
                android:paddingBottom="8dp"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUserReg"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/edittext_rounded"
                android:fontFamily="@font/pixel_font"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="6dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etEmailReg"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_rounded"
                android:fontFamily="@font/pixel_font"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="6dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPassReg"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_rounded"
                android:fontFamily="@font/pixel_font"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="6dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPassConfirmReg"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_rounded"
                android:fontFamily="@font/pixel_font"
                android:hint="Repeat password"
                android:inputType="textPassword"
                android:padding="6dp"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progressRegister"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pixel_button_bg"
                android:fontFamily="@font/pixel_font"
                android:text="Create account"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/tvMsgRegister"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/pixel_font"
                android:paddingTop="3dp"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </FrameLayout>

    <!-- Requirements panel on the right -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/requirementsPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_login_card"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/frameLayout">

        <TextView
            android:id="@+id/tvReqTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pixel_font"
            android:text="Requirements"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReqTitle">

            <TextView
                android:id="@+id/tvReqLen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/pixel_font"
                android:text="❌ At least 6 characters"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvReqLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/pixel_font"
                android:text="❌ Contains a letter"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvReqNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/pixel_font"
                android:text="❌ Contains a number"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvReqSpecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/pixel_font"
                android:text="❌ Contains a symbol"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvReqMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel_font"
                android:text="❌ Passwords match"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/pixel_button_bg"
        android:fontFamily="@font/pixel_font"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
