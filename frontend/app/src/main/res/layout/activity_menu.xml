<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainimg2"
    android:backgroundTintMode="src_in">

    <Button
        android:id="@+id/btnEventUsers"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/pixel_button_bg"
        android:fontFamily="@font/pixel_font"
        android:text="Events"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEventCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="3dp"
        android:background="#99000000"
        android:fontFamily="@font/pixel_font"
        android:lineSpacingExtra="1dp"
        android:paddingStart="7dp"
        android:paddingTop="3dp"
        android:paddingEnd="7dp"
        android:paddingBottom="3dp"
        android:text="Active: -&#10;Next in: 10:00"
        android:textColor="#FFFFFF"
        android:textSize="7sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEventUsers" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Settings"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnGroups"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/groups"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <ImageView
        android:id="@+id/ivGameLogo"
        android:layout_width="175dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/mainlogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="343dp"
        android:layout_height="232dp"
        android:background="@drawable/bg_login_card"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWelcomeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/pixel_font"
                android:text="Welcome, Player!"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnGoGame"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/pixel_button_bg"
                android:fontFamily="@font/pixel_font"
                android:text="Enter Game"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnGoShop"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pixel_button_bg"
                android:fontFamily="@font/pixel_font"
                android:text="Go to Shop"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/pixel_button_bg"
                android:fontFamily="@font/pixel_font"
                android:text="Log Out"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:backgroundTint="@null" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/settingsPanel"
        android:layout_width="343dp"
        android:layout_height="232dp"
        android:background="@drawable/bg_login_card"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/settingsTitleRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/tvSettingsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pixel_font"
                    android:text="Settings"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Info del usuario -->
            <LinearLayout
                android:id="@+id/settingsInfo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/settingsButtons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/settingsTitleRow"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/tvProfileUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/pixel_font"
                    android:text="Username: -"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/pixel_font"
                    android:text="Email: -"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvProfileCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/pixel_font"
                    android:text="Coins: -"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvProfilePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/pixel_font"
                    android:text="Password: ********"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvProfilePasswordNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:alpha="0.85"
                    android:fontFamily="@font/pixel_font"
                    android:text="(No se muestra por seguridad)"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp" />

            </LinearLayout>

            <!-- Botones -->
            <LinearLayout
                android:id="@+id/settingsButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/btnChooseAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/pixel_button_bg"
                    android:fontFamily="@font/pixel_font"
                    android:text="Change avatar"
                    android:textAllCaps="false"
                    android:textSize="10sp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnDeleteAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/pixel_button_bg_red"
                    android:fontFamily="@font/pixel_font"
                    android:text="Delete account"
                    android:textAllCaps="false"
                    android:textSize="10sp"
                    app:backgroundTint="@null" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/ivSettingsAvatarBig"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:contentDescription="User avatar large"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_1"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/settingsPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/settingsPanel"
        app:layout_constraintBottom_toBottomOf="@id/settingsPanel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.10" />

    <Button
        android:id="@+id/btnBackFromSettings"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/pixel_button_bg"
        android:fontFamily="@font/pixel_font"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:visibility="gone"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@+id/settingsPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/pixel_button_bg"
        android:fontFamily="@font/pixel_font"
        android:text="Leaderboard"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnAchievements"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="28dp"
        android:background="@android:color/transparent"
        android:contentDescription="Achievements"
        android:scaleType="fitCenter"
        android:src="@drawable/achievements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
