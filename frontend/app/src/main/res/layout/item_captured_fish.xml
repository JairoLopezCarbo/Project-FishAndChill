<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBg2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:rotation="-5"
        android:visibility="visible"
        app:cardBackgroundColor="#4A332A"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBg1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:rotation="-3"
        android:visibility="visible"
        app:cardBackgroundColor="#53392F"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFront"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#5C4033"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:strokeColor="#000000"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_login_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45">

                <ImageView
                    android:id="@+id/imgFish"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toTopOf="@+id/btnSellFish"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@android:drawable/ic_menu_gallery" />

                <Button
                    android:id="@+id/btnSellFish"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/pixel_button_bg"
                    android:fontFamily="@font/pixel_font"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:text="Sell"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/containerRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="#40000000"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/containerLeft"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvFishName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pixel_font"
                    android:gravity="center"
                    android:shadowColor="#80FFFFFF"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:text="Fish Name"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvFishDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pixel_font"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:text="Weight 2.5kg\nCaptured: 17/03/25 (17:24:21)"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvFishValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/pixel_font"
                    android:text="ðŸ’° 50"
                    android:textColor="#FFC107"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvStackCount"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="top|end"
        android:layout_margin="5dp"
        android:background="@drawable/pixel_button_bg_red"
        android:elevation="12dp"
        android:fontFamily="@font/pixel_font"
        android:gravity="bottom|center"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/btnRotate"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/pixel_button_bg_red"
        android:elevation="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/swap_fish"
        android:visibility="visible" />

</FrameLayout>